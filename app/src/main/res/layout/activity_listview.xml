<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F3F3"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/textLabelPollName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Poll Name "
        android:textSize="24sp"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/toggleButtonActivatePoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textOff="Deactivate"
        android:textOn="Activate"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"/>


        <ImageView
            android:id="@+id/imageViewNotification"
            android:src="@drawable/ic_notifications_black_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toggleButtonActivatePoll"
            android:layout_toLeftOf="@+id/imageViewDelete"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/imageViewDelete"
            android:src="@drawable/ic_delete_black_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageViewPublish"
            android:layout_below="@+id/toggleButtonActivatePoll"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/imageViewPublish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_public_black_48dp"
            android:layout_below="@+id/toggleButtonActivatePoll"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/textViewStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLabelPollName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:text="Start Date: 01/01/2017"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewStartDate"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:text="End Date: 01/01/2017"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>